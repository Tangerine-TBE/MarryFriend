<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_bg_dialog_bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="你期望Ta的婚姻状况  (可多选)"
            android:textColor="#404040"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_user_target_marrystate_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:src="@mipmap/icon_close_small" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_target_marrystate_unlimited"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/shape_bg_dialog_choose_check"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:text="不限"
                android:textColor="#FF4444"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_user_target_marrystate_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_bg_dialog_choose_uncheck"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:text="未婚"
                android:textColor="#101010"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_user_target_marrystate_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_bg_dialog_choose_uncheck"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:text="离异"
                android:textColor="#101010"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_user_target_marrystate_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_bg_dialog_choose_uncheck"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:text="丧偶"
                android:textColor="#101010"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_user_target_marrystate_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_bg_common_next"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_user_target_marrystate_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="18dp"
        android:text="跳过"
        android:textColor="#9A9A9A"
        android:textSize="17sp" />

</LinearLayout>