<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="12dp"
        tools:background="#FFF5F5F5"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chatMsgTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="上午  06:58"
            android:textColor="#FF9A9A9A"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/userHead"
            app:layout_constraintTop_toBottomOf="@id/chatMsgTime"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            tools:src="#000"
            app:riv_oval="true"
            android:layout_width="37dp"
            android:layout_height="37dp"/>
        <TextView
            android:id="@+id/userNickname"
            app:layout_constraintTop_toTopOf="@id/userHead"
            app:layout_constraintEnd_toStartOf="@id/userHead"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            tools:text="Breda Bell"
            android:textColor="#FF0D0D0D"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintEnd_toEndOf="@id/userNickname"
            app:layout_constraintTop_toBottomOf="@id/userNickname"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="184dp"
            android:background="@drawable/shape_chat_text"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="8dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="59dp"
                android:layout_height="59dp"/>
            <TextView
                android:textColor="#FF404040"
                android:textSize="15sp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="送你1朵小红花，很高兴认识你~"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>