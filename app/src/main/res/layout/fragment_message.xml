<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.twx.marryfriend.message.model.ConversationsModel"/>
        <variable
            name="conversationsModel"
            type="com.twx.marryfriend.message.model.ConversationsModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF5F5F5"
        android:orientation="vertical"
        tools:context=".message.MessageFragment">
        <FrameLayout
            android:paddingTop="20dp"
            android:background="#FFFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/test"
                android:text="消息"
                android:textColor="#FF101010"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="52dp"/>
        </FrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="15dp"
            android:background="#FFFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/latelyTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="13dp"
                android:layout_marginStart="14dp"
                android:text="最近喜欢"
                android:includeFontPadding="false"
                android:textColor="#FF0D0D0D"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@id/latelyTitle"
                app:layout_constraintBottom_toBottomOf="@id/latelyTitle"
                android:layout_marginStart="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="已有"
                    android:textColor="#FF9A9A9A"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@{String.valueOf(conversationsModel.laterLikeCount)}"
                    android:textColor="#FFFF4444"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="人互相喜欢啦~"
                    android:textColor="#FF9A9A9A"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:id="@+id/laterList"
                app:layout_constraintStart_toStartOf="@id/latelyTitle"
                app:layout_constraintTop_toBottomOf="@id/latelyTitle"
                app:layout_constraintEnd_toStartOf="@id/laterRight"
                android:layout_marginTop="16dp"
                android:background="#80000000"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/laterRight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/laterList"
                app:layout_constraintBottom_toBottomOf="@id/laterList"
                android:src="@mipmap/ic_message_later_right"
                android:layout_marginEnd="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:text="全部消息"
            android:textColor="#FF717171"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/msgSmartRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.scwang.smart.refresh.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/messageRecyclerView"
                android:background="#FFFFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <!--        <com.scwang.smart.refresh.footer.ClassicsFooter-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content" />-->
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>