<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="你目前的住房情况是？"
        android:textColor="#101010"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="资料越完善,越容易得到青睐,匹配的异性越精准"
        android:textColor="#101010"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_jump_house_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="和家人同住"
        android:textColor="#101010"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_jump_house_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="已购房"
        android:textColor="#101010"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_jump_house_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="租房"
        android:textColor="#101010"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_jump_house_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="打算婚后购房"
        android:textColor="#101010"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_jump_house_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="住在单位宿舍"
        android:textColor="#101010"
        android:textSize="17sp" />

</LinearLayout>