<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_detail_data_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:text="体型"
        android:textColor="#404040"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_detail_data_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/iv_detail_data_next"
        android:text="未填写"
        android:textColor="#404040"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_detail_data_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="16dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_photo_next" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_detail_data_next"
        android:layout_marginHorizontal="14dp"
        android:background="#F2F2F2" />

</RelativeLayout>