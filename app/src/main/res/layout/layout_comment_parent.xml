<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_detail_comment_parent_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="26dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_detail_comment_parent_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <LinearLayout
            android:id="@+id/ll_detail_comment_parent_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_detail_comment_parent_avatar">

            <TextView
                android:id="@+id/tv_detail_comment_parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="空你几哇"
                android:textColor="#101010"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_detail_comment_parent_sex"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_male" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_comment_parent_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_detail_comment_parent_info"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_detail_comment_parent_avatar"
            android:text="98年  武汉  本科  教育/科研"
            android:textColor="#9A9A9A"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_detail_comment_parent_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="28dp"
        android:text="你的每条动态都很特别，我很喜欢你的动态。"
        android:textColor="#101010"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_detail_comment_parent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="28dp"
        android:text="5月23日  13:45"
        android:textColor="#9A9A9A"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/ll_detail_comment_parent_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/shape_bg_comment_two"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_detail_comment_parent_child_avatar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:riv_oval="true" />

            <LinearLayout
                android:id="@+id/ll_detail_comment_parent_child_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/iv_detail_comment_parent_child_avatar"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_detail_comment_parent_child_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_detail_comment_parent_child_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="空你几哇"
                        android:textColor="#717171"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/tv_detail_comment_parent_child_sex"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_male" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail_comment_parent_child_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="你的每条动态都很特别，我很喜欢你的动态。"
                    android:textColor="#101010"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_detail_comment_parent_child_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="16dp"
                    android:text="5月23日  13:45"
                    android:textColor="#9A9A9A"
                    android:textSize="13sp" />

            </LinearLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail_comment_parent_child_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_detail_comment_parent_child_info" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail_comment_parent_child_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_detail_comment_parent_child_info"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_detail_comment_parent_child_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:layout_marginBottom="16dp"
            android:text="展开剩余6条回复"
            android:textColor="#101010"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="13dp"
        android:background="#F5F5F5" />

</LinearLayout>