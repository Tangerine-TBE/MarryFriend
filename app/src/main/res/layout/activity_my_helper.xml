<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.xyzz.myutils.action.ActionBar
        app:title="佳偶婚恋交友小助理"
        android:background="#FFFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/helperSetting"
            android:layout_gravity="end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/ic_chat_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </com.xyzz.myutils.action.ActionBar>
    <com.hyphenate.easeui.modules.chat.EaseChatLayout
        android:id="@+id/layout_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#FFFFFFFF"
        android:layout_height="54dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/helperService"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_helper_service"
                android:layout_width="37dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="4dp"
                android:text="在线客服"
                android:textSize="15sp"
                android:textColor="#FF101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/helperFeedback"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_helper_feedback"
                android:layout_width="37dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="4dp"
                android:text="意见反馈"
                android:textSize="15sp"
                android:textColor="#FF101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>