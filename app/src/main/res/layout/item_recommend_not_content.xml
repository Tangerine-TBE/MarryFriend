<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:background="#F5F5F5"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/shape_white_r16"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/recomendTimeTextTip"
                        android:layout_marginTop="40dp"
                        android:text="暂时没有更多,下次推荐时间"
                        android:textColor="#101010"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/recomendTime"
                        tools:text="明天中午12点整"
                        android:textColor="#101010"
                        android:textSize="22sp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="24dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/moreContent"
                        android:layout_marginTop="53dp"
                        android:text="查看更多嘉宾"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:paddingStart="88dp"
                        android:paddingEnd="88dp"
                        android:paddingTop="19dp"
                        android:paddingBottom="19dp"
                        android:background="@drawable/shape_loading_more"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/lastTextDynamicView"
                        android:minHeight="58dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/shape_home_last_dynamic"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lastTextDynamic"
                            tools:text="准备好迎接夏天了吗？夏天必备西瓜、冰淇淋、空调。准备好迎接夏天了吗？夏天必备西好迎接夏天了吗？夏天必..."
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="#FF101010"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:src="@mipmap/ic_last_text_dynamic"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="14dp"
                            android:layout_width="25dp"
                            android:layout_height="24dp"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lastDynamicView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/shape_white_r16"
                    android:orientation="vertical">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/lastDynamicImage"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        tools:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        app:shapeAppearance="@style/roundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="148dp"/>
                    <TextView
                        android:id="@+id/lastDynamicDes"
                        android:text="准备好迎接夏天了吗"
                        android:textColor="#FF717171"
                        android:textSize="15sp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="28dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:id="@+id/upUserInfo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintDimensionRatio="347:75"
                        android:layout_width="0dp"
                        android:layout_height="0dp">
                        <ImageView
                            android:id="@+id/upImageTip"
                            android:src="@mipmap/ic_item_up_load_life_l"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="去上传"
                            android:textColor="#FFFF4444"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="16dp"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="11dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/shape_white_r22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>
