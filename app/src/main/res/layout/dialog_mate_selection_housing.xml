<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_bg_dialog_bottom"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住房情况"
                android:textColor="#101010"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:text="(可多选)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/dialog_close"
            android:text="完成"
            android:background="@drawable/shape_bg_common_input"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/unlimited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/selector_dialog_multiple_choice"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="不限"
            android:textColor="@color/selector_choose_item"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/withFamily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/selector_dialog_multiple_choice"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="和家人同住"
            android:textColor="@color/selector_choose_item"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/purchasedHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_dialog_multiple_choice"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="已购房"
            android:textColor="@color/selector_choose_item"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/rentHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_dialog_multiple_choice"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="租房"
            android:textColor="@color/selector_choose_item"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/marryBuyHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_dialog_multiple_choice"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="打算婚后购房"
            android:textColor="@color/selector_choose_item"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/dormitory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_dialog_multiple_choice"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="住在单位宿舍"
            android:textColor="@color/selector_choose_item"
            android:textSize="17sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_confirm"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="确定"
        android:textColor="#FFFFFFFF"
        android:textSize="17sp" />
</LinearLayout>