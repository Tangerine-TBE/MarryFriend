<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.message.chat.TxtMessage"/>
        <import type="com.twx.marryfriend.message.model.ChatItemModel"/>
        <variable
            name="chatItemModel"
            type="ChatItemModel&lt;TxtMessage>" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="12dp"
        tools:background="#FFF5F5F5"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chatMsgTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="@{chatItemModel.visibility?View.VISIBLE:View.GONE}"
            android:text="@{chatItemModel.showTimeText}"
            tools:text="上午 8:00"
            android:textColor="#FF9A9A9A"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/userHead"
            app:layout_constraintTop_toBottomOf="@id/chatMsgTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            tools:src="#000"
            android:src="@{chatItemModel.imageHead}"
            app:riv_oval="true"
            android:layout_width="37dp"
            android:layout_height="37dp"/>
        <TextView
            android:id="@+id/userNickname"
            app:layout_constraintTop_toTopOf="@id/userHead"
            app:layout_constraintStart_toEndOf="@id/userHead"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            tools:text="Breda Bell"
            android:text="@{chatItemModel.nickname}"
            android:textColor="#FF0D0D0D"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userMsg"
            app:layout_constraintStart_toStartOf="@id/userNickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNickname"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="61dp"
            android:background="@drawable/shape_chat_text"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            tools:text="你好啊，静静,你好啊，贵贵，王毅：玩火者绝对没有好下场，犯我中华者必将受到惩处"
            android:text="@{chatItemModel.data.message}"
            android:textColor="#FF404040"
            android:includeFontPadding="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.makeramen.roundedimageview.RoundedImageView
            app:layout_constraintTop_toTopOf="@id/userMsg"
            app:layout_constraintBottom_toBottomOf="@id/userMsg"
            app:layout_constraintStart_toEndOf="@id/userMsg"
            android:layout_marginStart="8dp"
            android:src="#FFFF4444"
            app:riv_oval="true"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>