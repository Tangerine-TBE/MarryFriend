<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#FFF5F5F5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xyzz.myutils.action.ActionBarNoPadding
            app:title="对话"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="25dp"
                android:layout_gravity="end"
                android:layout_width="26dp"
                android:src="@mipmap/ic_launcher"
                android:layout_height="match_parent"/>
        </com.xyzz.myutils.action.ActionBarNoPadding>
        <FrameLayout
            android:background="#FFFFF5F5"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:textColor="#FFFF4444"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="对方尚未认证,请不要有经济往来,请他TA认证"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/shape_msg_authentication"
                android:text="邀请认证"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="7dp"
                android:paddingBottom="6dp"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:textColor="#FFFF4444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#FFFFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginStart="13dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="37dp"
                android:layout_height="37dp"/>
            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:hint="和你喜欢的人开始聊天吧~"
                android:textColorHint="#FF9A9A9A"
                android:textSize="15sp"
                android:paddingStart="18dp"
                android:background="@drawable/shape_chat_input"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="37dp"/>
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="37dp"
                android:layout_height="37dp"/>
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="37dp"
                android:layout_height="37dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>