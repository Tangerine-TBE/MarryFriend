<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="12dp"
        tools:background="#FFF5F5F5"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chatMsgTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="上午  06:58"
            android:textColor="#FF9A9A9A"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/userHead"
            app:layout_constraintTop_toBottomOf="@id/chatMsgTime"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            tools:src="#000"
            app:riv_oval="true"
            android:layout_width="37dp"
            android:layout_height="37dp"/>
        <TextView
            android:id="@+id/userNickname"
            app:layout_constraintTop_toTopOf="@id/userHead"
            app:layout_constraintEnd_toStartOf="@id/userHead"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            tools:text="Breda Bell"
            android:textColor="#FF0D0D0D"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userMsg"
            app:layout_constraintEnd_toEndOf="@id/userNickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNickname"
            android:layout_marginTop="6dp"
            android:layout_marginStart="61dp"
            android:background="@drawable/shape_chat_text"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            tools:text="你好啊，静静,你好啊，贵贵，王毅：玩火者绝对没有好下场，犯我中华者必将受到惩处"
            android:textColor="#FF404040"
            android:includeFontPadding="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.makeramen.roundedimageview.RoundedImageView
            app:layout_constraintTop_toTopOf="@id/userMsg"
            app:layout_constraintBottom_toBottomOf="@id/userMsg"
            app:layout_constraintEnd_toStartOf="@id/userMsg"
            android:layout_marginEnd="8dp"
            android:src="#FFFF4444"
            app:riv_oval="true"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
        <ImageView
            app:layout_constraintTop_toTopOf="@id/userMsg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/userMsg"
            android:layout_marginEnd="4dp"
            tools:src="#800000FF"
            tools:text="这是感叹号"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>