<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF5F5F5"
    android:orientation="vertical">
    <FrameLayout
        android:paddingTop="20dp"
        android:background="#FFFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="消息"
            android:textColor="#FF101010"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="52dp"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mutualLikeView"
        android:paddingBottom="15dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="#FFFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/latelyTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginStart="14dp"
            android:text="相互喜欢"
            android:includeFontPadding="false"
            android:textColor="#FF0D0D0D"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/latelyTitle"
            app:layout_constraintBottom_toBottomOf="@id/latelyTitle"
            android:layout_marginStart="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="已有"
                android:textColor="#FF9A9A9A"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/laterLikeCountView"
                tools:text="1"
                android:textColor="#FFFF4444"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="人互相喜欢啦~"
                android:textColor="#FF9A9A9A"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/laterList"
            app:layout_constraintStart_toStartOf="@id/latelyTitle"
            app:layout_constraintTop_toBottomOf="@id/latelyTitle"
            app:layout_constraintEnd_toStartOf="@id/laterRight"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="40dp">
            <FrameLayout
                android:id="@+id/mutualLikeView1"
                android:background="@drawable/shape_red_frame"
                android:padding="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mutualLikeHead1"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/mutualLikeView2"
                android:layout_marginStart="-8dp"
                android:background="@drawable/shape_red_frame"
                android:padding="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mutualLikeHead2"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/mutualLikeView3"
                android:layout_marginStart="-8dp"
                app:layout_constraintTop_toTopOf="@id/centerLine"
                app:layout_constraintBottom_toBottomOf="@id/centerLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shape_red_frame"
                android:padding="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mutualLikeHead3"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/mutualLikeView4"
                android:layout_marginStart="-8dp"
                app:layout_constraintTop_toTopOf="@id/centerLine"
                app:layout_constraintBottom_toBottomOf="@id/centerLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shape_red_frame"
                android:padding="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mutualLikeHead4"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/mutualLikeView5"
                android:layout_marginStart="-8dp"
                app:layout_constraintTop_toTopOf="@id/centerLine"
                app:layout_constraintBottom_toBottomOf="@id/centerLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shape_red_frame"
                android:padding="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mutualLikeHead5"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:id="@+id/laterRight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/laterList"
            app:layout_constraintBottom_toBottomOf="@id/laterList"
            android:src="@mipmap/ic_message_later_right"
            android:layout_marginEnd="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:text="全部消息"
        android:textColor="#FF717171"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>