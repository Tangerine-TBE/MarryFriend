<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.twx.marryfriend.recommend.widget.MyNestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@drawable/shape_recommend_item"
            android:layout_marginTop="28dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--           大图-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/briefIntroduction"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.twx.marryfriend.recommend.widget.RecommendImage
                        android:id="@+id/recommendPhoto"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        tools:visibility="gone"
                        android:src="@drawable/ic_big_default_pic"
                        android:foreground="@drawable/shape_recommend_frame"
                        app:layout_constraintDimensionRatio="347:347"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="-16dp" />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/distanceView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/shape_distance"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="11dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/ic_item_last_location"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>
                        <TextView
                            android:id="@+id/distance"
                            android:text="距离您--km·南山"
                            android:textColor="#FFFFFFFF"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <ImageView
                        android:id="@+id/itemSetting"
                        android:src="@mipmap/ic_item_setting"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="26dp"
                        android:layout_height="26dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintTop_toBottomOf="@id/recommendPhoto"
                        android:background="@drawable/shape_recommend_user_info"
                        android:paddingBottom="26dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/itemNickname"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="17dp"
                            android:layout_marginTop="17dp"
                            android:text="罐头香菜"
                            android:textColor="#FF404040"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/realNameView"
                            app:layout_constraintTop_toTopOf="@id/itemNickname"
                            app:layout_constraintBottom_toBottomOf="@id/itemNickname"
                            app:layout_constraintStart_toEndOf="@id/itemNickname"
                            android:background="@drawable/shape_real_name"
                            android:layout_marginStart="12dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/ic_item_real_name"
                                android:layout_width="12dp"
                                android:layout_height="11dp"/>
                            <TextView
                                android:text="实名·真实头像"
                                android:textColor="#FFFFFFFF"
                                android:textSize="11dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <ImageView
                            android:id="@+id/vipLabel"
                            app:layout_constraintStart_toEndOf="@id/realNameView"
                            app:layout_constraintTop_toTopOf="@id/realNameView"
                            app:layout_constraintBottom_toBottomOf="@id/realNameView"
                            android:layout_marginStart="7dp"
                            android:src="@mipmap/ic_item_vip"
                            android:layout_width="43dp"
                            android:layout_height="21dp"/>
                        <TextView
                            android:id="@+id/age"
                            android:text="28岁"
                            app:layout_constraintStart_toStartOf="@id/itemNickname"
                            app:layout_constraintTop_toBottomOf="@id/itemNickname"
                            android:layout_marginTop="12dp"
                            android:textColor="#FF404040"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/doing"
                            app:layout_constraintStart_toStartOf="@id/age"
                            app:layout_constraintTop_toBottomOf="@id/age"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/occupation"
                                android:text="互联网·程序员"
                                android:textColor="#FF404040"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginStart="9dp"
                                android:background="#FF0D0D0D"
                                android:layout_width="1px"
                                android:layout_height="11dp"/>
                            <TextView
                                android:id="@+id/education"
                                android:text="北京交通大学·本科"
                                android:layout_marginStart="8dp"
                                android:textColor="#FF404040"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            app:layout_constraintStart_toStartOf="@id/doing"
                            app:layout_constraintTop_toBottomOf="@id/doing"
                            android:layout_marginTop="18dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/albumPhotoCount"
                                android:text="2张照片"
                                android:textColor="#FF9A9A9A"
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginStart="9dp"
                                android:background="#FF0D0D0D"
                                android:layout_width="1px"
                                android:layout_height="11dp"/>
                            <TextView
                                android:id="@+id/dynamicCount"
                                android:text="16条动态"
                                android:layout_marginStart="8dp"
                                android:textColor="#FF9A9A9A"
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--关于我-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/selfIntroduction"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="26dp"
                    android:background="@drawable/shape_recommend_about_me"
                    android:orientation="vertical">
                    <TextView
                        android:text="[关于我]"
                        android:textColor="#FF0D0D0D"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="0.25"
                        android:layout_marginTop="27dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/aboutMeTip"
                            android:textColor="#FF101010"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:letterSpacing="0.25"
                            tools:text="穿鞋183长的凑合两个酒窝比较白直男拍照法"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/aboutMe"
                            android:textColor="#FF101010"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:letterSpacing="0.25"
                            android:text="穿鞋183长的凑合两个酒窝比较白直男拍照法阿可恶基本都是黑白色性格的话比较温顺逗比包开心辣种
                    \n\n穿鞋183长的凑合两个酒窝比较白直男拍照法阿可恶基本都是黑白色性格的话比较温顺逗比包开心辣种"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
<!--                我心中的TA-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/expectedTA"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="26dp"
                    android:background="@drawable/shape_recommend_about_me"
                    android:orientation="vertical">
                    <TextView
                        android:text="[我心目中的Ta]"
                        android:textColor="#FF0D0D0D"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="0.25"
                        android:layout_marginTop="27dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/expectedTAText"
                            android:textColor="#FF101010"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:letterSpacing="0.25"
                            tools:text="幽默大方，体贴善良有趣，性格的话比较温顺逗比包开心辣种事业上有自己的规划，不钓鱼！不钓鱼！不钓鱼！不钓鱼！不钓鱼！不钓鱼！不钓鱼！不钓鱼！"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--语音介绍-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/voiceIntroduce"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="24dp"
                    tools:visibility="visible"
                    android:background="@drawable/shape_recommend_about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/taVoice"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="20dp"
                        android:includeFontPadding="false"
                        android:text="[他的语音介绍]"
                        android:textColor="#FF101010"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ViewSwitcher
                        android:id="@+id/firstViewSwitcher"
                        app:layout_constraintStart_toEndOf="@id/taVoice"
                        app:layout_constraintBottom_toTopOf="@id/playVoice"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/firstVoiceTip"
                            android:src="@mipmap/ic_listener_he_speak"
                            android:layout_width="142dp"
                            android:layout_height="32.5dp"/>
                        <ImageView
                            android:id="@+id/firstAddVoice"
                            android:src="@mipmap/ic_first_add_my_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </ViewSwitcher>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/playVoice"
                        app:layout_constraintTop_toBottomOf="@id/taVoice"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_recommend_voice1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="22dp"
                            android:src="@drawable/selector_play_voice"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                        <ImageView
                            android:id="@+id/playAnim"
                            android:layout_marginStart="9dp"
                            android:src="@drawable/anim_play_audio"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/voiceDuration"
                            android:layout_marginEnd="22dp"
                            android:text="00:52"
                            android:textColor="#FF101010"
                            android:textSize="13sp"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/uploadVoice"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/playVoice"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_recommend_voice2"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="22dp"
                            android:src="@drawable/shape_white_circle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                        <TextView
                            android:text="说点什么来开启你们的对话吧！"
                            android:textColor="#FF9E9E9E"
                            android:textSize="13sp"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--            我的相册-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/myAlbum"
                    tools:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/shape_recommend_about_me"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/myAlbumSeeMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="[我的相册]"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="29dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:includeFontPadding="false"
                            android:textColor="#FF101010"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/rightArrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@mipmap/ic_item_right"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                        <TextView
                            android:id="@+id/photoCount"
                            app:layout_constraintTop_toTopOf="@id/rightArrow"
                            app:layout_constraintBottom_toBottomOf="@id/rightArrow"
                            app:layout_constraintEnd_toStartOf="@id/rightArrow"
                            android:layout_marginEnd="10dp"
                            android:text="查看所有12张"
                            android:textColor="#FF9A9A9A"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <com.twx.marryfriend.recommend.widget.PicturePreviewView
                        android:id="@+id/myAlbumPreview"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        tools:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--            我的标签-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/myLabel"
                    tools:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_recommend_about_me"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="[基本资料]"
                        android:textColor="#FF101010"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/baseChipGroup"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="7dp"
                        app:chipSpacingHorizontal="4dp"
                        app:chipSpacingVertical="-1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!--                    48dp-->
                        <com.google.android.material.chip.Chip
                            android:text="黑龙江牡丹江人"
                            app:chipIcon="@mipmap/ic_launcher"
                            app:textStartPadding="4dp"
                            app:iconStartPadding="8dp"
                            app:textEndPadding="12dp"
                            android:textSize="13sp"
                            android:textColor="#FF404040"
                            app:chipBackgroundColor="#FFF5F5F5"
                            app:chipIconSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.chip.ChipGroup>
                    <TextView
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="23dp"
                        android:text="[TA的择偶条件]"
                        android:textColor="#FF101010"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/demandChipGroup"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="7dp"
                        app:chipSpacingHorizontal="4dp"
                        app:chipSpacingVertical="-1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!--                    48dp-->
                        <com.google.android.material.chip.Chip
                            android:text="20-30岁"
                            app:chipIcon="@mipmap/ic_launcher"
                            app:textStartPadding="4dp"
                            app:iconStartPadding="8dp"
                            app:textEndPadding="12dp"
                            android:textSize="13sp"
                            android:textColor="#FF404040"
                            app:chipBackgroundColor="#FFF5F5F5"
                            app:chipIconSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.chip.ChipGroup>
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shape_recommend_block"
                        android:layout_width="61dp"
                        android:layout_height="16dp">
                        <ImageView
                            android:layout_gravity="center_horizontal|bottom"
                            android:src="@mipmap/ic_item_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
<!--                认证-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/myAuthentication"
                    tools:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_recommend_about_me"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="[基本资料]"
                        android:textColor="#FF101010"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/idCardInfo"
                        android:background="@drawable/shape_home_auth"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="19dp"
                        android:layout_marginTop="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/realNameIcon"
                            android:src="@drawable/selector_recommend_id_card"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="17dp" />

                        <TextView
                            android:id="@+id/realNameTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="17dp"
                            android:layout_toEndOf="@id/realNameIcon"
                            android:text="实名已认证"
                            android:textColor="#101010"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/realNameDes"
                            android:layout_alignStart="@id/realNameTitle"
                            android:layout_below="@id/realNameTitle"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:text="已认证居民身份证：4415************，用户年龄属实"
                            android:textColor="#101010"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/headPorInfo"
                        android:background="@drawable/shape_home_auth"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="19dp"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/headPorIcon"
                            android:src="@drawable/selector_recommend_head_pro"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="17dp" />

                        <TextView
                            android:id="@+id/headPorTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/headPorIcon"
                            android:text="头像已认证"
                            android:textColor="#101010"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/headPorDes"
