<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="12dp"
    android:paddingTop="9dp"
    android:paddingBottom="8dp"
    android:background="@drawable/shape_search_item_label"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/itemSearchChipIcon"
        android:src="@mipmap/ic_label_age"
        android:layout_width="18dp"
        android:layout_height="18dp"/>
    <TextView
        android:id="@+id/itemSearchChipLabel"
        android:layout_marginStart="4dp"
        android:text="黑龙江牡丹江人"
        android:textColor="#FF404040"
        android:textSize="13sp"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.appcompat.widget.LinearLayoutCompat>