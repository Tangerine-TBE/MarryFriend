<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".login.retrieve.RetrieveActivity">

    <RelativeLayout
        android:id="@+id/rl_retrieve_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp">

        <ImageView
            android:id="@+id/iv_retrieve_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/ic_back_black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_retrieve_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_retrieve_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="身份证信息"
        android:textColor="#404040"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_retrieve_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_retrieve_tv1"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="36dp"
        android:text="为了检验是否是本人操作，我们需要进行一次身份信息和人脸验证，这些信息仅用于本次验证"
        android:textColor="#404040"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/et_retrieve_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_retrieve_tv2"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="34dp"
        android:textColor="#404040"
        android:background="@drawable/shape_bg_common_input"
        android:gravity="center"
        android:hint="请输入姓名"
        android:paddingVertical="20dp"
        android:textColorHint="#9A9A9A"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/et_retrieve_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_retrieve_name"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:textColor="#404040"
        android:background="@drawable/shape_bg_common_input"
        android:digits="0123456789 X"
        android:gravity="center"
        android:hint="请输入身份证号"
        android:maxLength="18"
        android:paddingVertical="20dp"
        android:textColorHint="#9A9A9A"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_retrieve_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/shape_bg_common_next"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="17sp" />


</RelativeLayout>