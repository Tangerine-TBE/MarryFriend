<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/shape_search_result_item"
        android:paddingBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/searchItemHead"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="33dp"
            android:layout_marginStart="14dp"
            android:src="#000"
            app:shapeAppearance="@style/searchResultHead"
            android:layout_width="62dp"
            android:layout_height="62dp"/>
        <TextView
            android:id="@+id/searchItemName"
            app:layout_constraintStart_toEndOf="@id/searchItemHead"
            app:layout_constraintTop_toTopOf="@id/searchItemHead"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="罐头香菜"
            android:textColor="#FF404040"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/searchItemRealName"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/searchItemName"
            app:layout_constraintTop_toTopOf="@id/searchItemName"
            app:layout_constraintBottom_toBottomOf="@id/searchItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_search_real_name"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/ic_item_real_name"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <TextView
                android:text="实名·真实头像"
                android:includeFontPadding="false"
                android:textColor="#FFFFFFFF"
                android:textSize="11sp"
                android:layout_marginStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:id="@+id/searchItemVip"
            app:layout_constraintStart_toEndOf="@id/searchItemRealName"
            app:layout_constraintTop_toTopOf="@id/searchItemRealName"
            app:layout_constraintBottom_toBottomOf="@id/searchItemRealName"
            android:layout_marginStart="4dp"
            android:src="@mipmap/ic_item_vip"
            android:layout_width="43dp"
            android:layout_height="21dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintTop_toBottomOf="@id/searchItemName"
            app:layout_constraintStart_toStartOf="@id/searchItemName"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/searchItemPhotoCount"
                android:text="2张照片"
                android:textColor="#FF9A9A9A"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:background="#FF0D0D0D"
                android:layout_width="0.5dp"
                android:layout_height="11dp"/>
            <TextView
                android:id="@+id/searchItemDynamicCount"
                android:text="2条动态"
                android:textColor="#FF9A9A9A"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:background="#FF0D0D0D"
                android:visibility="gone"
                android:layout_width="0.5dp"
                android:layout_height="11dp"/>
            <TextView
                android:id="@+id/searchItemViewpointCount"
                android:text="2条观点"
                android:textColor="#FF9A9A9A"
                android:visibility="gone"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/searchItemChipGroup"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/searchItemHead"
            app:layout_constraintStart_toStartOf="@id/searchItemHead"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            app:chipSpacingVertical="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </com.google.android.material.chip.ChipGroup>
        <TextView
            android:id="@+id/searchItemText"
            app:layout_constraintStart_toStartOf="@id/searchItemChipGroup"
            app:layout_constraintEnd_toEndOf="@id/searchItemChipGroup"
            app:layout_constraintTop_toBottomOf="@id/searchItemChipGroup"
            android:layout_marginTop="25dp"
            android:text="穿鞋183长的凑合两个酒窝比较白直男拍照法阿可恶基本都是黑白色性格的话比较温顺逗比包开心辣种互联网行..."
            android:lines="3"
            android:textColor="#FF101010"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/searchItemChat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchItemText"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.287197231834"
            android:src="@mipmap/ic_search_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/searchItemLike"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchItemText"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.712802768166"
            android:src="@mipmap/ic_search_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>