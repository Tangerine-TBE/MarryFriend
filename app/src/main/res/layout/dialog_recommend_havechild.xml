<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@mipmap/pic_bg_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp">

        <TextView
            android:id="@+id/tv_recommend_havechild_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="12dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/shape_bg_common_input"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="跳过"
            android:textColor="#9A9A9A"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="84dp"
        android:text="你有孩子吗？"
        android:textColor="#101010"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="资料越完善,越容易得到青睐,匹配的异性越精准"
        android:textColor="#101010"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_recommend_havechild_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="没有孩子"
        android:textColor="#101010"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_recommend_havechild_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="有孩子且住在一起"
        android:textColor="#101010"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_recommend_havechild_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="有孩子偶尔会住在一起"
        android:textColor="#101010"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/tv_recommend_havechild_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_bg_dialog_choose_uncheck"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="有孩子但不在身边"
        android:textColor="#101010"
        android:textSize="17sp" />


</LinearLayout>