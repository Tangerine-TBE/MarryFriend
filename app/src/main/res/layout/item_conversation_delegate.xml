<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.hyphenate.easeui.widget.EaseImageView
        android:id="@+id/messageHead"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="#000"
        app:ease_shape_type="round"
        android:scaleType="centerCrop"
        android:layout_width="52dp"
        android:layout_height="52dp"/>
    <ImageView
        android:id="@+id/superVipHead"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/messageHead"
        android:src="@mipmap/ic_super_vip_head"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/messageCount"
        app:layout_constraintEnd_toEndOf="@id/messageHead"
        app:layout_constraintTop_toTopOf="@id/messageHead"
        app:layout_constraintBottom_toTopOf="@id/messageHead"
        android:layout_marginEnd="2dp"
        tools:text="1"
        android:background="@drawable/shape_message_list_count"
        android:textColor="#FFFFFFFF"
        android:textSize="11dp"
        android:gravity="center"
        android:layout_width="17dp"
        android:layout_height="17dp"/>
    <ImageView
        android:id="@+id/messageMutualLikeIcon"
        app:layout_constraintBottom_toBottomOf="@id/messageHead"
        app:layout_constraintStart_toStartOf="@id/messageHead"
        android:src="@drawable/selector_friend_tag"
        android:layout_width="22dp"
        android:layout_height="22dp"/>
    <TextView
        android:id="@+id/messageUserNickname"
        app:layout_constraintTop_toTopOf="@id/messageHead"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@id/messageHead"
        android:layout_marginStart="16dp"
        android:textColor="#FF404040"
        android:textSize="17dp"
        android:includeFontPadding="false"
        tools:text="罐头香菜"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintStart_toEndOf="@id/messageUserNickname"
        app:layout_constraintTop_toTopOf="@id/messageUserNickname"
        app:layout_constraintBottom_toBottomOf="@id/messageUserNickname"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/isViolation"
            android:text="用户违规"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/shape_message_violation"
            android:textColor="#FF9A9A9A"
            android:textSize="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/isMessageRealName"
            android:text="已实名"
            android:background="@drawable/shape_message_real_name"
            android:textColor="#FFFF4444"
            android:textSize="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/msgLock"
            android:layout_marginStart="4dp"
            android:src="@mipmap/ic_msg_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/vipIdentification"
            android:layout_marginStart="4dp"
            android:src="@mipmap/ic_message_vip"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <ImageView
            android:id="@+id/vipIdentification2"
            android:layout_marginStart="4dp"
            android:src="@mipmap/ic_super_vip_msg"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/notVipShowView"
        tools:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/messageUserNickname"
        app:layout_constraintTop_toBottomOf="@id/messageUserNickname"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/conversationCity"
            tools:text="深圳"
            android:textColor="#FF717171"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="#FFDCDCDC"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="0.5dp"
            android:layout_height="11dp"/>
        <TextView
            android:id="@+id/conversationAge"
            tools:text="24岁"
            android:textColor="#FF717171"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="#FFDCDCDC"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="0.5dp"
            android:layout_height="11dp"/>
        <TextView
            android:id="@+id/conversationOccupation"
            tools:text="职业"
            android:textColor="#FF717171"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="#FFDCDCDC"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="0.5dp"
            android:layout_height="11dp"/>
        <TextView
            android:id="@+id/conversationEducation"
            tools:text="大专"
            android:textColor="#FF717171"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lastMsgView"
        app:layout_constraintStart_toStartOf="@id/messageUserNickname"
        app:layout_constraintEnd_toStartOf="@id/messageTimeText"
        app:layout_constraintTop_toBottomOf="@id/messageUserNickname"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/msg_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ease_msg_state_fail_resend"
            android:visibility="gone" />
        <TextView
            android:id="@+id/conversationLastMsg"
            tools:text="最后一条命最后一条命最后一条命最后一条命最后一条命最后一条命最后一条命最后一条命"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/adaptive_11dp"
            android:textColor="#FF717171"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/messageTimeText"
        app:layout_constraintTop_toTopOf="@id/messageUserNickname"
        app:layout_constraintBottom_toBottomOf="@id/messageUserNickname"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="14dp"
        tools:text="12:32"
        android:textSize="13sp"
        android:textColor="#FF9A9A9A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        app:layout_constraintStart_toStartOf="@id/messageUserNickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFF2F2F2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>