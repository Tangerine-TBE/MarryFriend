<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    xmlns:tools="http://schemas.android.com/tools">
    <!--                        app:shapeAppearance="@style/roundedCornerStyle"-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/life_image"
        tools:src="@drawable/ic_big_default_pic"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/life_title"
        android:text="家有萌宠"
        android:textColor="#FFFFFFFF"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="5dp"
        android:includeFontPadding="false"
        android:background="@drawable/shape_dynamic_label"
        android:textSize="13sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:background="@drawable/shape_life_text_bg"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:id="@+id/life_des"
            android:text="疫情前的游乐场"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</FrameLayout>