<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.twx.marryfriend.bean.message.mutual.MutualLikeData"/>
        <variable
            name="mutualLikeData"
            type="MutualLikeData" />
    </data>

    <com.twx.marryfriend.mutual.ItemMutualLikeView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/itemMutualLikeImg"
                    tools:src="@mipmap/ic_item_vip"
                    android:scaleType="centerCrop"
                    android:src="@{mutualLikeData.image_url}"
                    app:shapeAppearance="@style/loveMeImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    android:background="@drawable/shape_mutual_like_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginStart="9dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="9dp"
                        android:text="相互喜欢"
                        android:textColor="#FFFF4444"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mutualLikeText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.357954545455"
                    android:background="@drawable/shape_love_item"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.3846153846153846"
                        android:layout_marginStart="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/itemMutualLikeOnLineTime"
                            tools:text="卡尼吉伊娃"
                            android:text="@{mutualLikeData.nick}"
                            android:drawableEnd="@mipmap/ic_launcher"
                            android:gravity="center"
                            android:textColor="#FFFFFFFF"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_marginTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/itemMutualLikePlace"
                                tools:text="深圳"
                                android:text="@{mutualLikeData.nick}"
                                android:includeFontPadding="false"
                                android:textColor="#FFFFFFFF"
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="#FFFFFFFF"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/itemMutualLikeAge"
                                tools:text="24岁"
                                android:text="@{mutualLikeData.ageText}"
                                android:includeFontPadding="false"
                                android:textColor="#FFFFFFFF"
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="#FFFFFFFF"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/itemMutualLikeOccupation"
                                tools:text="幼师"
                                android:text="@{mutualLikeData.occupation_str}"
                                android:includeFontPadding="false"
                                android:textColor="#FFFFFFFF"
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintTop_toTopOf="@id/mutualLikeText"
                    app:layout_constraintBottom_toTopOf="@id/mutualLikeText"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="14dp"
                    android:layout_width="33dp"
                    android:layout_height="33dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.twx.marryfriend.mutual.ItemMutualLikeView>

</layout>