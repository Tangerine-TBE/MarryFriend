<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_detail_coin_record_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="17dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_detail_coin_record_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送花给 [奥利戈]"
            android:textColor="#404040"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_detail_coin_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2011/08/05"
            android:textColor="#9A9A9A"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_coin" />

        <TextView
            android:id="@+id/tv_detail_coin_record_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="+210"
            android:textColor="#43A0FC"
            android:textSize="17sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_detail_coin_record_detail"
        android:layout_marginHorizontal="14dp"
        android:background="#E6E6E6" />

</RelativeLayout>