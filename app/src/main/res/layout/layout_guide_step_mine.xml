<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_guide_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="关于我"
                android:textColor="#404040"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_guide_star" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="说说你的性格,工作经历等情况"
            android:textColor="#404040"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_bg_mine_input"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_guide_mine_content"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="24dp"
                android:background="@null"
                android:gravity="top"
                android:hint="请做一个30字以上的自我介绍,可以讲讲你的性格,工作经历、职场经历、求学经历、家庭背景,或者有什么正在做或想做的事"
                android:maxLength="1000"
                android:textColor="#404040"
                android:textColorHint="#9A9A9A"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_guide_mine_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（请输入10字以上）"
                    android:textColor="#9A9A9A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_guide_mine_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#9A9A9A"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/1000"
                    android:textColor="#9A9A9A"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_bg_mine_examples"
            android:orientation="vertical"
            android:paddingVertical="15dp"
            android:paddingStart="24dp"
            android:paddingEnd="13dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="示例：冷笑话小天才"
                android:textColor="#FF4444"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奋斗在一线的保温杯配枸杞的互联网养生达人"
                android:textColor="#FF4444"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对新鲜事物充满好奇，想体验泰拳和二胡"
                android:textColor="#FF4444"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>