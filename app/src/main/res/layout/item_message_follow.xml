<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.twx.marryfriend.message.model.ConversationsItemModel"/>
        <import type="android.view.View"/>
        <variable
            name="conversationsItemModel"
            type="com.twx.marryfriend.message.model.ConversationsItemModel" />
    </data>
    <com.twx.marryfriend.message.views.FollowConversationItemView
        android:layout_width="match_parent"
        android:layout_height="86dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="86dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/messageHead"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:riv_corner_radius="26dp"
                tools:src="#000"
                android:scaleType="centerCrop"
                android:src="@{conversationsItemModel.userImage}"
                android:layout_width="52dp"
                android:layout_height="52dp"/>
            <TextView
                android:id="@+id/messageUserNickname"
                app:layout_constraintTop_toTopOf="@id/messageHead"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toEndOf="@id/messageHead"
                android:layout_marginStart="16dp"
                android:textColor="#FF404040"
                android:textSize="17dp"
                android:includeFontPadding="false"
                tools:text="2人关注了我"
                android:text="2人关注了我"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintStart_toStartOf="@id/messageUserNickname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/messageUserNickname"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="她应该在盼望你的回应吧"
                tools:text="她应该在盼望你的回应吧"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <!--        <TextView-->
            <!--            android:id="@+id/messageTimeText"-->
            <!--            app:layout_constraintTop_toTopOf="@id/messageUserNickname"-->
            <!--            app:layout_constraintBottom_toBottomOf="@id/messageUserNickname"-->
            <!--            app:layout_constraintEnd_toEndOf="parent"-->
            <!--            android:layout_marginEnd="14dp"-->
            <!--            tools:text="12:32"-->
            <!--            android:text="@{conversationsItemModel.lastTimeShow}"-->
            <!--            android:textSize="13sp"-->
            <!--            android:textColor="#FF9A9A9A"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"/>-->
            <View
                app:layout_constraintStart_toStartOf="@id/messageUserNickname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#FFF2F2F2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.twx.marryfriend.message.views.FollowConversationItemView>
</layout>