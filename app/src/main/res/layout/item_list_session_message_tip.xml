<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.twx.marryfriend.message.model.ConversationsItemModel"/>
        <import type="android.view.View"/>
        <variable
            name="conversationsItemModel"
            type="com.twx.marryfriend.message.model.ConversationsItemModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="86dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/messageHead"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:riv_corner_radius="26dp"
            tools:src="#000"
            android:src="@{conversationsItemModel.userImage}"
            android:layout_width="52dp"
            android:layout_height="52dp"/>
        <TextView
            android:id="@+id/messageCount"
            app:layout_constraintEnd_toEndOf="@id/messageHead"
            app:layout_constraintTop_toTopOf="@id/messageHead"
            app:layout_constraintBottom_toTopOf="@id/messageHead"
            android:layout_marginEnd="2dp"
            tools:text="1"
            android:background="@drawable/shape_message_list_count"
            android:text="@{String.valueOf(conversationsItemModel.unReaderCount)}"
            android:textColor="#FFFFFFFF"
            android:textSize="11dp"
            android:gravity="center"
            android:layout_width="17dp"
            android:layout_height="17dp"/>
        <ImageView
            android:id="@+id/messageMutualLikeIcon"
            app:layout_constraintBottom_toBottomOf="@id/messageHead"
            app:layout_constraintStart_toStartOf="@id/messageHead"
            android:src="@mipmap/ic_launcher"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <TextView
            android:id="@+id/messageUserNickname"
            app:layout_constraintTop_toTopOf="@id/messageHead"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@id/messageHead"
            android:layout_marginStart="16dp"
            android:textColor="#FF404040"
            android:textSize="17dp"
            android:includeFontPadding="false"
            tools:text="罐头香菜"
            android:text="@{conversationsItemModel.nickname}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/isMessageRealName"
            app:layout_constraintStart_toEndOf="@id/messageUserNickname"
            app:layout_constraintTop_toTopOf="@id/messageUserNickname"
            app:layout_constraintBottom_toBottomOf="@id/messageUserNickname"
            android:layout_marginStart="4dp"
            android:text="已实名"
            android:visibility="@{conversationsItemModel.isRealName? View.VISIBLE:View.GONE}"
            android:background="@drawable/shape_message_real_name"
            android:textColor="#FFFF4444"
            android:textSize="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintStart_toEndOf="@id/isMessageRealName"
            app:layout_constraintTop_toTopOf="@id/isMessageRealName"
            app:layout_constraintBottom_toBottomOf="@id/isMessageRealName"
            android:layout_marginStart="4dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="@{conversationsItemModel.isVip? View.VISIBLE:View.GONE}"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            app:layout_constraintStart_toStartOf="@id/messageUserNickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messageUserNickname"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            android:text="@{conversationsItemModel.lastMassage}"
            tools:text="她应该在盼望你的回应吧"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/messageTimeText"
            app:layout_constraintTop_toTopOf="@id/messageUserNickname"
            app:layout_constraintBottom_toBottomOf="@id/messageUserNickname"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp"
            tools:text="12:32"
            android:text="@{conversationsItemModel.lastTimeShow}"
            android:textSize="13sp"
            android:textColor="#FF9A9A9A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            app:layout_constraintStart_toStartOf="@id/messageUserNickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#FFF2F2F2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>