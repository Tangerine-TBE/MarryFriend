<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="8dp"
    android:layout_weight="1">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_detail_blacklist_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_dialog_avatar_male"
        app:riv_corner_radius="16dp" />

    <LinearLayout
        android:id="@+id/ll_detail_blacklist_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_bg_blacklist_remove">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="11dp"
            android:src="@drawable/ic_blacklist_remove" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="13dp"
            android:text="移除黑名单"
            android:textColor="#101010"
            android:textSize="13sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/shape_bg_blacklist_bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_detail_blacklist_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="罐头香菜"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_detail_blacklist_sex"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:src="@mipmap/icon_blacklist_male" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_detail_blacklist_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="16dp"
                android:text="深圳 丨 24岁 丨 幼师"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_detail_blacklist_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_blacklist_chat" />

    </RelativeLayout>

</RelativeLayout>
