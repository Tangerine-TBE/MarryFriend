<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/one_click_img"
        android:src="@mipmap/ic_one_click_hello"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8267"
        app:layout_constraintDimensionRatio="310:123.5"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/one_click_close"
        android:src="@mipmap/ic_one_click_hello_close"
        app:layout_constraintEnd_toEndOf="@id/one_click_img"
        app:layout_constraintTop_toTopOf="@id/one_click_img"
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="@id/one_click_img"
        app:layout_constraintEnd_toEndOf="@id/one_click_img"
        app:layout_constraintTop_toBottomOf="@id/one_click_img"
        android:paddingBottom="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_one_click"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/one_click_recycler_view"
            android:background="#FFFFFFFF"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="260dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/one_click_send"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/one_click_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.712903225806"
            app:layout_constraintDimensionRatio="221:45"
            android:background="@drawable/shape_confirm"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/one_click_heart"
                tools:src="@drawable/ic_one_click_heart"
                android:layout_width="30.26dp"
                android:layout_height="26dp"/>
            <TextView
                android:layout_marginStart="13dp"
                android:text="打招呼"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>