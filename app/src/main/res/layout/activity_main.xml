<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_main_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:id="@+id/rg_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/select_rb_recommend_pic"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_love"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/select_rb_love_pic"
            android:gravity="center"
            android:text="喜欢"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/select_rb_dynamic_pic"
            android:gravity="center"
            android:text="动态"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/select_rb_message_pic"
            android:gravity="center"
            android:text="消息"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/select_rb_mine_pic"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

    </RadioGroup>

</RelativeLayout>