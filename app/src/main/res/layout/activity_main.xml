<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".main.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rg_main_menu"/>

    <View
        android:id="@+id/menu1"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu2"
        app:layout_constraintTop_toTopOf="@id/rg_main_menu"
        app:layout_constraintBottom_toBottomOf="@id/rg_main_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/menu2"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/menu1"
        app:layout_constraintEnd_toStartOf="@id/menu3"
        app:layout_constraintTop_toTopOf="@id/rg_main_menu"
        app:layout_constraintBottom_toBottomOf="@id/rg_main_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/menu3"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/menu2"
        app:layout_constraintEnd_toStartOf="@id/menu4"
        app:layout_constraintTop_toTopOf="@id/rg_main_menu"
        app:layout_constraintBottom_toBottomOf="@id/rg_main_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/menu4"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/menu3"
        app:layout_constraintEnd_toStartOf="@id/menu5"
        app:layout_constraintTop_toTopOf="@id/rg_main_menu"
        app:layout_constraintBottom_toBottomOf="@id/rg_main_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/menu5"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/menu4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rg_main_menu"
        app:layout_constraintBottom_toBottomOf="@id/rg_main_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <RadioGroup
        android:id="@+id/rg_main_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/select_rb_recommend_pic"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_love"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/select_rb_love_pic"
            android:gravity="center"
            android:text="喜欢"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/select_rb_dynamic_pic"
            android:gravity="center"
            android:text="动态"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/select_rb_message_pic"
            android:gravity="center"
            android:text="消息"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/select_rb_mine_pic"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/select_rb_color"
            android:textSize="11sp" />

    </RadioGroup>
    <TextView
        android:id="@+id/likeWoUnread"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="又有12个人喜欢你了"
        android:paddingBottom="12dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginStart="12dp"
        android:background="@mipmap/ic_like_me"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/menu1"
        app:layout_constraintEnd_toEndOf="@id/menu3"
        app:layout_constraintBottom_toTopOf="@id/menu1"
        app:layout_constraintDimensionRatio="308:80"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/likeWoUnread2"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/menu2"
        app:layout_constraintStart_toStartOf="@id/menu2"
        app:layout_constraintEnd_toEndOf="@id/menu2"
        android:background="@drawable/shape_home_bottom_num_tip"
        app:layout_constraintHorizontal_bias="0.7"
        android:text="1"
        android:textSize="11dp"
        android:textColor="#FFFFFFFF"
        android:includeFontPadding="false"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/messageNumNew"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/menu4"
        app:layout_constraintStart_toStartOf="@id/menu4"
        app:layout_constraintEnd_toEndOf="@id/menu4"
        android:background="@drawable/shape_home_bottom_num_tip"
        app:layout_constraintHorizontal_bias="0.7"
        android:text="1"
        android:textSize="11dp"
        android:textColor="#FFFFFFFF"
        android:includeFontPadding="false"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>