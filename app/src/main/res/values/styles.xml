<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--登陆 输入验证码edit style-->
    <style name="code_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#43A0FC</item>
        <item name="background">@drawable/shape_bg_common_input</item>
        <item name="android:clickable">false</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingVertical">20dp</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>


    <style name="DefaultDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="roundedCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="recommendMutualLike">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">44dp</item>
    </style>

    <style name="recommendLoading">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">44dp</item>
    </style>

    <style name="searchResultHead">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">31dp</item>
    </style>
    <style name="loveMeImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="oneClickImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">27dp</item>
    </style>

    <!--Splash界面配置主题-->
    <!--windowDisablePreview 适配8.0启动activity不崩溃，
    因为当前SDK=27，activity设置了竖屏展示且theme需要透明，
    8.0后只有全屏不透明的activity才能设置方向锁定，所以，主题要透明且要设置竖直方向用这个theme-->
    <style name="AppTheme.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#00000000</item>
    </style>

    <!--启动页主题-->
    <style name="AppStartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--冷启动时间更慢 但是点击图标是立即打开视觉效果-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

</resources>