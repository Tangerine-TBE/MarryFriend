<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_detail_comment_child_avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:riv_oval="true" />

    <LinearLayout
        android:id="@+id/ll_detail_comment_child_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/iv_detail_comment_child_avatar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_detail_comment_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="空你几哇"
                android:textColor="#717171"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_detail_comment_child_sex"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_male" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"
                android:textColor="#9A9A9A"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_detail_comment_child_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空你几哇"
                android:textColor="#9A9A9A"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_comment_child_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="你的每条动态都很特别，我很喜欢你的动态。"
            android:textColor="#101010"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_detail_comment_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:text="5月23日  13:45"
            android:textColor="#9A9A9A"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>